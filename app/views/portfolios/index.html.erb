<h1>Portfolio Items</h1>

<%= link_to "Create new item", new_portfolio_path %>

<p>
  <%= new_portfolio_path %>
</p>


<% @portfolio_items.each do |portfolio_item| %>
  <p><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item.id) %></p>
  <p><%=portfolio_item.subtitle %></p>
  <%= image_tag portfolio_item.main_image if !portfolio_item.main_image.nil? %>
  <%= link_to "Edit Portfolio Item", edit_portfolio_path(portfolio_item.id) %>
  <%= link_to 'Delete Portfolio Item', portfolio_path(portfolio_item), method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>
